                @(languageService.currentLanguage == "en" ? "Genre" : "Thể loại")
            </NavLink>
        </div>

        @* Nút sang Movie *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="movie">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                    <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm4 0v6h8V1zm8 8H4v6h8zM1 1v2h2V1zm2 3H1v2h2zM1 7v2h2V7zm2 3H1v2h2zm-2 3v2h2v-2zM15 1h-2v2h2zm-2 3v2h2V4zm2 3h-2v2h2zm-2 3v2h2v-2zm2 3h-2v2h2z"/>
                </svg>
                @(languageService.currentLanguage == "en" ? "Movie" : "Phim")
            </NavLink>
        </div>

        @* Nút sang Showtime *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="showtime">
                <i class="fa-solid fa-calendar-days" style="width: 32px; font-size: 20px;"></i>
                @(languageService.currentLanguage == "en" ? "Showtime" : "Lịch chiếu")
            </NavLink>
        </div>

        @* Nút sang Area *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="area">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                </svg>
                @(languageService.currentLanguage == "en" ? "Area" : "Khu vực")
            </NavLink>
        </div>

        @* Nút sang Cinema *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cinema">
                <i class="fa-solid fa-synagogue"></i>
                @(languageService.currentLanguage == "en" ? "Cinema" : "Rạp")
            </NavLink>
        </div>

         @* Nút sang Room *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="room">
