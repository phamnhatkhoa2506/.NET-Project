            </NavLink>
        </div>

        @* Nút sang Seat Type *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="seat-type">
                <i class="fa-solid fa-diagram-successor"></i>
                @(languageService.currentLanguage == "en" ? "Seat type" : "Loại ghế")
            </NavLink>
        </div>

        @* Nút sang Seat *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="seat">
                <i class="fa-solid fa-couch"></i>
                @(languageService.currentLanguage == "en" ? "Seat" : "Ghế")
            </NavLink>
        </div>

        @* Nút sang Seat bôoked *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="booked-seats">
                <i class="fa-solid fa-circle-check"></i>
                @(languageService.currentLanguage == "en" ? "Booked seats" : "Ghế đã đặt")
            </NavLink>
        </div>

        @* Nút sang Concession Type *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="concession-type">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
                    <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z"/>
                </svg>
                @(languageService.currentLanguage == "en" ? "Concession type" : "Loại đồ ăn uống")
            </NavLink>
        </div>

        @* Nút sang Concession *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="concession">
                <i class="fa-solid fa-hotdog"></i>
                @(languageService.currentLanguage == "en" ? "Concession" : "Đồ ăn uống")
            </NavLink>
        </div>

        @* Nút sang Ticket Type *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ticket-type">
                <i class="fa-solid fa-ticket-simple"></i>
                @(languageService.currentLanguage == "en" ? "Ticket type" : "Loại vé")
            </NavLink>
        </div>

        @* Nút sang Ticket *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ticket">
                <i class="fa-solid fa-ticket"></i>
                @(languageService.currentLanguage == "en" ? "Ticket" : "Vé")
            </NavLink>
        </div>

        @* Nút sang Ticket booked *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="booked-tickets">
                <i class="fa-solid fa-check"></i>
                @(languageService.currentLanguage == "en" ? "Booked tickets" : "Vé đã đặt")
            </NavLink>
        </div>

        @* Nút sang User *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="user">
                <i class="fa-solid fa-user"></i>
                @(languageService.currentLanguage == "en" ? "User" : "Người dùng")
            </NavLink>
        </div>

        @* Nút sang Membership *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="membership">
                <i class="fa-solid fa-users"></i>
                @(languageService.currentLanguage == "en" ? "Membership" : "Hội viên")
            </NavLink>
        </div>

        @* Nút sang Transaction *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="transaction">
                <i class="fa-solid fa-credit-card"></i>
                @(languageService.currentLanguage == "en" ? "Transaction" : "Giao dịch")
            </NavLink>
        </div>

        @* Nút sang Bill *@
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bill">
                <i class="fa-solid fa-money-bill-wave"></i>
                @(languageService.currentLanguage == "en" ? "Bill" : "Hoá đơn")
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        var lang = await JS.InvokeAsync<string>("localStorage.getItem", "language");
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
