<style>
    .quick-book-container {
        border: 1px solid rgb(172, 169, 169);
        border-radius: 10px;
        gap: 10px;
        padding: 10px;
    }

    .quick-book-container select {
        height: 40px;
        width: 200px;
        border-radius: 10px;
        outline: none;
        padding-left: 10px;
        padding-right: 10px;
    }   

    .quick-book-container button {
        border-radius: 10px;
        border: none;
    }
</style>

<div class="quick-book-container d-flex flex-row justify-content-center align-items-center">
    <h1 style="font-size: 20px; margin: 0;">QUICK BOOK</h1>
    <select @bind="seletedCinema"  >
        <option hidden selected>Chọn Rạp</option>
    </select>
    <select>
        <option hidden selected>Chọn Phim</option>
    </select>
    <select>
        <option hidden selected>Chọn Ngày</option>
    </select>
    <select>
        <option hidden selected>Chọn Giờ</option>
    </select>
    <button>BOOKING</button>
</div>

@code 
{
    public string seletedCinema = "Chọn Rạp";
}